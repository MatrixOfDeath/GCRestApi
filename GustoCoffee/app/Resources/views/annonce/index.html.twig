{% extends 'base.html.twig' %}

{% block title %}
    <title>{{ 'GustoCoffee - Annonces'|trans }}</title>
{% endblock %}

{% block firstImg %}
    topPage topPageAnnonce
{% endblock %}

{% block paddingTitle %}
    paddingTitle
{% endblock %}

{% block titleHome %}
    {{ 'GustoCoffee - Annonces'|trans }}
{% endblock %}
{# ---------- First Block - Dépôt d'annonce ---------- #}
{% block firstBlock %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a href="{{ path('fos_user_security_logout') }}"></a>
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="centerText">{{ 'Déposez votre annonce'|trans }}</h2>
        </div>
    </div>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                {{ form_label(form.titre) }}
                {{ form_widget(form.titre) }}
                {{ form_errors(form.titre) }}
            </div>
            <div class="col-md-3"></div>
        </div>
         <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                {{ form_label(form.corps) }}
                {{ form_widget(form.corps) }}
                {{ form_errors(form.corps) }}
            </div>
            <div class="col-md-3"></div>
         </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                {{ form_label(form.categorieAnnonce) }}
                {{ form_widget(form.categorieAnnonce) }}
                {{ form_errors(form.categorieAnnonce) }}
            </div>
            <div class="col-md-3"></div>
        </div>
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <input type="checkbox" id="showPhone" name="subscribe" value="CheckboxValue">
                <label for="showPhone">{{ 'Souhaitez-vous montrer votre prénom ?' |trans }}</label>
            </div>
            <div class="col-md-3"></div>

            <div class="col-md-12">
                <div class="datecreationAnnonce" style="display: none">
                        {{ form_label(form.datecreation) }}
                        {{ form_widget(form.datecreation) }}
                        {{ form_errors(form.datecreation) }}

                    {{ form_label(form.corps) }}
                    {{ form_widget(form.corps) }}
                    {{ form_errors(form.corps) }}

                 </div>

            </div>
        </div>
    <div class="col-md-12 form-connexion">
        <input type="submit" class="buttonInscription centerText" value="{{ 'Postez votre annonce'|trans }}" />
    </div>
        {{ form_end(form) }}
    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('annonce_index') }}">Back to the list</a>#}
        {#</li>#}
    {#</ul>#}
    {% else %}
        <a style="display: none;" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
    {% endif %}
{% endblock %}
{# ---------- End First Block - Dépôt d'annonce---------- #}

{# ---------- Second Block - Listing d'annonces ---------- #}
{% block secondBlock %}
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="centerText">{{ 'Liste des Annonces'|trans }}</h2>
        </div>
    </div>
    <section>
        <table class="tableAnnonceList" align="center">
            <thead>
            <tr>
                <th>{{ 'Titre'|trans }}</th>
                <th>{{ 'Corps du message'|trans }}</th>
                <th>{{ "Catégorie de l'annonce"|trans }}</th>
                <th>{{ 'Date de création'|trans }}</th>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a href="{{ path('fos_user_security_logout') }}"></a>
                    <th>Actions</th>
                {% else %}
                    <a style="display: none;" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for annonce in annonces %}
                <tr>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="{{ path('fos_user_security_logout') }}"></a>
                        <td><a href="{{ path('annonce_show', { 'idannonce': annonce.idannonce }) }}">{{ annonce.titre }}</a></td>
                    {% else %}
                        <td>{{ annonce.titre }}</td>
                    {% endif %}
                    <td>{{ annonce.corps }}</td>
                    <td>{{ annonce.categorieAnnonce }}</td>
                    <td>{% if annonce.datecreation %}{{ annonce.datecreation|date('d-m-Y h:m') }}{% endif %}</td>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('fos_user_security_logout') }}"></a>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('annonce_show', { 'idannonce': annonce.idannonce }) }}">{{ "Montrer l'annonce"|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('annonce_edit', { 'idannonce': annonce.idannonce }) }}">{{ "Éditer l'annonce"|trans }}</a>
                                </li>
                            </ul>
                        </td>
                    {% else %}
                        <a style="display: none;" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}
{# ---------- End Second Block - Listing d'annonces ---------- #}

