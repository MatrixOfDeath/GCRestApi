{% extends 'base.html.twig' %}

{% block title %}
    <title>GustoCoffee - Voir une annonce</title>
{% endblock %}

{% block firstImg %}
    topPageAnnonce
{% endblock %}

{% block titleHome %}
    GustoCoffee - Votre Annonce
{% endblock %}

{% block firstBlock %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<a href="{{ path('fos_user_security_logout') }}"></a>
<div class="row addPadding">
    <div class="col-md-12">
        <h2 class="centerText">Voici votre annonce</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <table>
            <tbody>
              <tr>
                   <th>Titre</th>
                 <td>{{ annonce.titre }}</td>
              </tr>
             <tr>
                    <th>Corps</th>
                    <td>{{ annonce.corps }}</td>
             </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if annonce.datecreation %}{{ annonce.datecreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        {{ form_start(delete_form) }}
        <input type="submit" class="buttonSuppressionAnnonce centerText" align="right" value="Supprimer votre annonce">
        {{ form_end(delete_form) }}
        <a href="{{ path('annonce_edit', { 'idannonce': annonce.idannonce }) }}">Éditez votre annonce</a><br>
        <a href="{{ path('annonce_index') }}">Retour à la liste des annonces</a>
    </div>
</div>
    {% else %}
        <a style="display: none;" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
    {% endif %}
{% endblock %}