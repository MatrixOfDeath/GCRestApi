<div class="row btn-group">
    <a href="#" id="list" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-th-list"></span> {{ "Liste"|trans }}
    </a>
    <a href="#" id="grid" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-th"></span> {{ "Grille"|trans }}
    </a>
</div>
<div class="row list-group">
{% for produit in produits %}
    <div class="col-md-6 col-xs-12 col-sm-6 col-lg-4 cardSalle">
        <div class="thumbnail">
            <a href="{{ path('produit_show', { 'idproduit': produit.idproduit }) }}">
                <img class="group list-group-image" src="{{ asset('uploads/images/products/'~ produit.image) | imagine_filter('produit_downscale') }}" alt="{{ 'Image produits'|trans }}" title="{{ 'Image produits'|trans }}"></a>
            <div class="caption">
                <h4 class="group inner list-group-item-heading centerText">
                    {{ produit.nomproduit }}
                </h4>
                <p class="group inner list-group-item-text centerText">
                    {{ produit.description }}
                </p>
                <p class="centerText">
                    {{ "Prix du service"|trans }} : {{ produit.prixproduit|tva(produit.tva.multiplicate) }}â‚¬
                </p>
                <p class="group inner list-group-item-text centerText">
                    <button type="button" class="btn btn-success buttonAddProductPanier" value="{{ produit.idproduit }}" >{{ "Ajouter au panier"|trans }}</button>
                </p>
                <div class="row">

                </div>
            </div>
        </div>
    </div>
{% endfor %}
</div>