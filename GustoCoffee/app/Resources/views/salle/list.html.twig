                {#<div id="slider-range"></div>#}
                {#</div>#}

            </div>
        </div>

        <div class="col-md-2"></div>

        <div class="col-md-10 reservation-result-container">
            <div class="row">
                <div class="btn-group">
                    <a href="#" id="list" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-th-list"></span>Liste
                    </a>
                    <a href="#" id="grid" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-th"></span>Grille
                    </a>
                </div>
                <div id="time-range">
                    <p>{{ 'Créneau horaire'|trans }}:<br> <span class="slider-time">10:00</span>H - <span class="slider-time2">20:00</span>H
                    </p>

                    <div id="slider-range"></div>
                </div>

            </div>
            <div class="row">

                <div id="display-salle" class="row list-group">
                    {% for salle in salles %}

                    {% if salle.capacitymax == 4 %}
                        <div class="col-xs-4 col-lg-4 cardReservation">
                            <div class="chooseCard">
                                <a href="{{ path('salle_show', { 'idsalle': salle.idsalle }) }}">
                                    <img src="{{ asset('place/groupPlace.jpg') }}" alt="Salle privatisée" style="width:100%">
                                    <span class="overlay">
                                            <span class="text">
                                                Plus d'infos
                                            </span>
                                        </span>
                                </a>
                                <div class="containerCard">
                                    <h4 class="cardTitle"><strong>{{ salle.nomsalle }}</strong></h4>
                                    <p>{{ salle.capacitymax }}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {% if salle.capacitymax == 6 %}
                    <div class="col-xs-4 col-lg-4 cardReservation">
                    <div class="chooseCard">
                        <a href="{{ path('salle_show', { 'idsalle': salle.idsalle }) }}">
                            <img src="{{ asset('place/groupPlace.jpg') }}" alt="Salle privatisée" style="width:100%">
                            <span class="overlay">
                                            <span class="text">
                                                Plus d'infos
                                            </span>
                                        </span>
                        </a>
                        <div class="containerCard">
                            <h4 class="cardTitle"><strong>{{ salle.nomsalle }}</strong></h4>
                            <p>{{ salle.capacitymax }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}

                {% endfor %}
            </div>
        </div>
