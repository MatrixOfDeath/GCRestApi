{% extends 'base.html.twig' %}

{% block title %}
    <title>GustoCoffee Réservation</title>
{% endblock %}

{% block firstImg %}
    topPageReservation
{% endblock %}

{% block titleHome %}
    Réservation CoWorking
{% endblock %}

{% block firstBlock %}
    <div class="row addPadding">
        <div class="col-md-3"></div>
        <div class="col-md-6 centerText">
            <p>La {{ salle.nomsalle }} contient {{ salle.capacitymax }} places.</p>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}

{% block secondBlock %}

    <div class="row addPading">
        {% for produit in produits %}
            <div class="col-md-4 centerText">
                {{ produit.nomproduit }}
            </div>
            <div class="col-md-4 centerText">
                {{ produit.description }}
            </div>
            <div class="col-md-4 centerText">
                {{ produit.prixproduit }}
            </div>
        {% endfor %}
    </div>
    <div class="clear"></div>
{% endblock %}
