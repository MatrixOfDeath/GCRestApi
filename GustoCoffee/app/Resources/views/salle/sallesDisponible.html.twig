                        <a href="{{ path('salle_show', { 'idsalle': salle.idsalle }) }}">
                        </a>
                        <h4 class="group inner list-group-item-heading">
                            {{ "Nom de la salle"|trans ~ ': ' ~ salle.nomsalle }}
                        </h4>
