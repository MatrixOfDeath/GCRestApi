{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commande</h1>

    <table>
        <tbody>
            <tr>
                <th>Datecommande</th>
                <td>{% if commande.datecommande %}{{ commande.datecommande|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Idcommande</th>
                <td>{{ commande.idcommande }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commande_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('commande_edit', { 'idcommande': commande.idcommande }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
