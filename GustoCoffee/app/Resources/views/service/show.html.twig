{% extends 'base.html.twig' %}

{% block body %}
    <h1>Service</h1>

    <table>
        <tbody>
            <tr>
                <th>Nomservice</th>
                <td>{{ service.nomservice }}</td>
            </tr>
            <tr>
                <th>Prixservice</th>
                <td>{{ service.prixservice }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Quantiteenstock</th>
                <td>{{ service.quantiteenstock }}</td>
            </tr>
            <tr>
                <th>Statutservice</th>
                <td>{{ service.statutservice }}</td>
            </tr>
            <tr>
                <th>Idservice</th>
                <td>{{ service.idservice }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('service_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('service_edit', { 'idservice': service.idservice }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
