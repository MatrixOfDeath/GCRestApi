{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    <title>GustoCoffee - {{ "Modification de mot de passe"|trans }}</title>
{% endblock %}

{% block firstImg %}
    topPage topPageLogin
{% endblock %}

{% block paddingTitle %}
    paddingTitle
{% endblock %}

{% block titleHome %}
    <div class="banniere">
        <h1 class="colorWhite">{{ "Modification de mot de Passe"|trans }}</h1>
        <h3 class="colorWhite"> <i>{{ "Mot de passe oublié ? On vous en renvoie un !"|trans }} !</i></h3>
    </div>
    {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
        <button class="buttonGC greenButton" onclick="location.href='{{ path('fos_user_registration_register') }}'">
            {{ 'Inscrivez-vous dès maintenant !'|trans }}
        </button>
    {% endif %}
{% endblock %}

{% block firstBlock %}
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="titlePara">{{ "Réinitialiser le mot de passe"|trans }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 form-connexion">
            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}


            {{ form_label(form.plainPassword.first) }}
            {{  form_widget (form.plainPassword.first, {'attr': {'placeholder': 'Nouveau mot de passe', 'style': 'width: 100%'}}) }}
            {{  form_errors (form.plainPassword.first) }}
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 form-connexion">
            {{ form_label(form.plainPassword.second) }}
            {{  form_widget (form.plainPassword.second, {'attr': {'placeholder': 'Confirmer nouveau mot de passe', 'style': 'width: 100%'}}) }}
            {{  form_errors (form.plainPassword.second) }}
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 form-connexion">
            <input class="buttonGC brownButton" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
        <div class="col-md-3"></div>
    </div>

            {{ form_end(form) }}
{% endblock %}

{% block secondBlock %}{% endblock %}

{% block thirdBlock %}{% endblock %}
