{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}


{% block customCss %}
    <link href="{{ asset('build/login.scss') }}" rel="stylesheet">
{% endblock %}

{% block title %}
    <title>GustoCoffee Change Password</title>
{% endblock %}

{% block firstImg %}
    topPageLogin
{% endblock %}

{% block titleHome %}
    Password CoWorking
{% endblock %}

{% block firstBlock %}
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="titlePara">RÃ©initialiser le mot de passe</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 form-connexion">
            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}


            {{ form_label(form.plainPassword.first) }}
