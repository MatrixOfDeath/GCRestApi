        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 form-connexion">
            {{ form_label(form.plainPassword.second) }}
            {{  form_widget (form.plainPassword.second, {'attr': {'placeholder': 'Confirmer nouveau mot de passe', 'style': 'width: 100%'}}) }}
            {{  form_errors (form.plainPassword.second) }}
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 form-connexion">
            <input class="buttonInscription" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
