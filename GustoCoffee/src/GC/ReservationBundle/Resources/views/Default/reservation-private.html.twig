{% block firstBlock %}
    <div class="row addPadding">

        {# ---------- Première card ---------- #}
        <div class="col-md-2" id="getFixed" role="navigation"><br>

            {# Choix de la date #}
            <form id="room-search-form">
                <div id="reservation-date-picker" class="form-group">
                    <label> {{  "Choisir votre date"|trans }} </label>
                    <input style="width: 100%" type="date" data-date-inline-picker="true" max="{{ 'now'|date_modify("+20days")|date('Y-m-d', "Europe/Paris") }}" min="{{ 'now'|date('Y-m-d', "Europe/Paris") }}" name="reservation-date">
                </div>
            </form>

            <div class="row">
                <div class="col-xs-12">
                    <button class="btn btn-block btn-primary buttonSearch">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> {{  "Rechercher"|trans }}
                    </button>
                </div>

                <div class="col-xs-12">
                    <button class="btn btn-block btn-default">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> {{  "Annuler"|trans }}
                    </button>
                </div>

            </div>

            {# Selection de la plage horaire: todo: Récupérer nos heures d'ouverture selon le jour #}
