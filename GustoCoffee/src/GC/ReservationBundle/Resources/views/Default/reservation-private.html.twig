        <h1 class="colorWhite">Espace Réservation</h1>
        <h3 class="colorWhite"> <i>Si on tentait l'expérience ? </i></h3>
    </div>
    <button class="buttonInscription greenButton">
        <a class="colorWhite" href="{{ path('gc_reservation_page') }}">{{ 'Réservez votre place'|trans }} </a>
    </button>
    <button class="buttonInscription greenButton">
        <a class="colorWhite" href="{{ path('fos_user_registration_register') }}">{{ 'Inscrivez-vous dès maintenant !'|trans }}</a>
    </button>
