{% extends 'base.html.twig' %}

{% block customCss %}
    <link href="{{ asset('build/reservation-private-salle.scss') }}" rel="stylesheet">
{% endblock %}

{% block title %}
    GustoCoffee- Réservation Privée
{% endblock %}

{% block firstImg %}
    topPage topPageReservation
{% endblock %}

{% block paddingTitle %}
    paddingTitle
{%  endblock %}

{% block titleHome %}
    <div class="banniere">
        <h1 class="colorWhite">{{"Espace Réservation"|trans}}</h1>
        <h3 class="colorWhite"> <i>{{"Et si on tentait l'expérience"|trans}} ? </i></h3>
    </div>
    <button class="buttonGC blueButton" onclick="location.href='{{ path('gc_reservation_page') }}'">
        {{ 'Réservez votre place'|trans }}
    </button>
    <button class="buttonGC greenButton" onclick="location.href='{{ path('fos_user_registration_register') }}'">
        {{ 'Inscrivez-vous dès maintenant !'|trans }}
    </button>
{% endblock %}

{% block firstBlock %}
<p>OKK</p>
{% endblock %}

{% block secondBlock %}
    {{ form_start(form) }}
    <div class="row addPadding">
        <div class="col-md-4 centerText" onchange="return setDate();">
            {{ form_label(form.datereservation, 'Date de réservation') }}
            {{ form_widget(form.datereservation) }}
        </div>
        <div class="col-md-4 centerText">
            {{ form_label(form.heuredebut, 'Heure de début') }}
            {{ form_widget(form.heuredebut) }}
        </div>
        <div class="col-md-4 centerText">
            {{ form_label(form.heurefin, 'Heure de fin') }}
            {{ form_widget(form.heurefin) }}
        </div>
        <div class="col-md-12 clear"></div>
        <div class="col-md-3">
            {{ form_label(form.petitDej, 'Petit Déjeuner') }}
            {{ form_widget(form.petitDej) }}
        </div>
        <div class="col-md-3">
            {{ form_label(form.dej, 'Déjeuner') }}
            {{ form_widget(form.dej) }}
        </div>
        <div class="col-md-3">
            {{ form_label(form.diner, 'Diner') }}
            {{ form_widget(form.diner) }}
        </div>
        <div class="col-md-3">
            {{ form_label(form.bureautique, 'Bureautique') }}
            {{ form_widget(form.bureautique) }}
        </div>
        <div class="col-md-12 form-connexionHide">
            {{ form_widget(form.remarquereservation) }}
            {{ form_widget(form.commentaireclient) }}
            {{ form_widget(form.idfermeture) }}
            {{ form_widget(form.idmagasin) }}
            {{ form_widget(form.idmodepaiement) }}
            {{ form_widget(form.idouverture) }}
            {{ form_widget(form.idpersonne) }}

        </div>
        <div class="col-md-3"></div>
        <div class="col-md-6 addPadding">
            <input type="submit" class="buttonGC brownButton centerText centerButton" value="Réservez" />
        </div>
        <div class="col-md-3"></div>
    </div>
    {{ form_end(form) }}

{% endblock %}


{% block script %}
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js"></script>
    <script src="{{ asset('assets/js/input.js') }}"></script>
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
