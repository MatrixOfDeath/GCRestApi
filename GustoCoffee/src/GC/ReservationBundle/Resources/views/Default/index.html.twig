{% extends 'base.html.twig' %}

{% block title %}
    GustoCoffee - Réservation
{% endblock %}

{% block firstImg %}
   topPage topPageReservation
{% endblock %}

{% block paddingTitle %}
    paddingTitle
{%  endblock %}

{% block titleHome %}
    <div class="banniere">
        <h1 class="colorWhite">{{"Espace Réservation"|trans}}</h1>
        <h3 class="colorWhite"> <i>{{"Réservez vite votre place ou votre salle"|trans}}</i></h3>
    </div>
    <button class="buttonGC blueButton" onclick="location.href='{{ path('place_index') }}'">
        {{ 'Réservez votre place'|trans }}
    </button>

    {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
        <button class="buttonGC greenButton" onclick="location.href='{{ path('fos_user_security_login') }}'">
            {{ 'Connectez-vous ici'|trans }}
        </button>
    {% endif %}
    <button class="buttonGC blueButton" onclick="location.href='{{ path('salle_index') }}'">
        {{ 'Réservez votre salle'|trans }}
    </button>
{% endblock %}

{% block firstBlock %}
    <div class="row customPadding">
        <div class="col-md-12 ">
            <h2 class="titleReservation">{{ "Réservez votre place"|trans }} !</h2>
            <div class="clearText"></div>
            <p class="textReservation textDescription"><strong>{{ "Consommez à volonté, chez GustoCoffee"|trans }} !</strong> {{ "Demandez à avoir un petit déjeuner, déjeuner ou encore à dîner si vous le souhaitez."|trans }}<br>
            </p>
            <div class="clearText"></div>
        </div>
        <div class="col-md-6">
            <div class="sliderMap">
                <div class="status">
                    <h3> {{ "C'est Ouvert"|trans }} ! </h3>
                </div>
                <div class="shop-name centerText">
                    <h2> GustoCoffee </h2>
                </div>
                <div class="shop-address centerText">
                    <p>17 Rue Dunkerque, 75010 Paris</p>
                </div>
                <div class="google-maps">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2623.8805368187677!2d2.3539111156751145!3d48.879553879289524!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e6dbddc4fe1%3A0xcc08be2d420511b!2s17+Rue+de+Dunkerque%2C+75010+Paris!5e0!3m2!1sfr!2sfr!4v1505141708046" width="400" height="300" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
        <div id="GrilleTarification" class="col-md-6" >
            <div class="tablePrice">
                <table class="table-striped">
                    <thead>
                    <tr class="firstLine">
                        <th class="lineRow"> {{ "Nos services"|trans }} </th>
                        <th class="tablePriceSecondRow lineRow"> {{ 'Prix'|trans }} / {{ 'personne'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="lineRow"> {{ 'Première heure '|trans }}</td>
                        <td class="tablePriceSecondRow lineRow"> 5€ </td>
                    </tr>
                    <tr>
                        <td class="lineRow"> 1/2 {{ 'heure supplémentaires'|trans }} </td>
                        <td class="tablePriceSecondRow lineRow"> 2€ </td>
                    </tr>
                    <tr>
                        <td class="lineRow"> {{ 'Troisième heures'|trans }} </td>
                        <td class="tablePriceSecondRow lineRow"> {{ 'Offerte'|trans }} </td>
                    </tr>
                    <tr>
                        <td class="lineRow"> {{ 'Journée'|trans }} </td>
                        <td class="tablePriceSecondRow lineRow"> 20€ </td>
                    </tr>
                    <tr>
                        <td class="lineRow"> {{ 'Service bureautique'|trans }} </td>
                        <td class="tablePriceSecondRow lineRow"> 10€ / {{ 'groupe'|trans }} </td>
                    </tr>
                    <tr>
                        <td class="lineRow"> {{ 'Petit déjeuner, déjeuner & dîner'|trans }} </td>
                        <td class="tablePriceSecondRow lineRow"> 5€ </td>
                    </tr>
                    </tbody>
                </table>

            </div>
            <div class="clearText"></div>
            <p class="textReservation textDescription">
                {{ 'Obtenez '|trans }}<strong>{{ '10% de réduction'|trans|raw }}</strong>{% trans %} sur la restauration, les services bureautique en réservant directement sur notre site internet ! Les gaufres, les crêpes, le café ainsi que le thé sont {% endtrans %} <strong>{{ 'à volonté'|trans }}</strong> !!
            </p>
        </div>
    </div>
{% endblock %}

