{% extends'base.html.twig' %}

{% block title %}
    <title>GustoCoffee Contact</title>
{% endblock %}

{% block firstImg %}
    topPage topPageContact
{% endblock %}

{% block paddingTitle
    paddingTitle
{%  endblock %}


{% block titleHome %}
    Contact CoWorking
{% endblock %}


{% block firstBlock %}
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="centerText">Contactez-nous</h2>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.subject) }}
                        {{ form_errors(form.subject) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>
                    <div class="form-group" style="display: none;">
                        {{ form_rest(form) }}
                    </div>
                </div>
                <div class="col-md-12 form-connexion">
                    <div class="clear"></div>
                    <input class="buttonInscription centerText" type="submit" value="Envoyer le message">
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}


{% block secondBlock %}
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="centerText">Téléphonez-nous</h2>
            <div class="clear"></div>
            <p class="sizeBigFont centerText"><b>01.15.54.15.18</b></p>
        </div>
    </div>
{% endblock %}
