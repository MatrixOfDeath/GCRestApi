{% extends'base.html.twig' %}

{% block title %}
    <title>GustoCoffee Contact</title>
{% endblock %}

{% block firstImg %}
    topPage topPageContact
{% endblock %}

{% block paddingTitle %}
    paddingTitle
{%  endblock %}


{% block titleHome %}
    <div class="banniere">
        <h1 class="colorWhite">Contact</h1>
        <h3 class="colorWhite"> <i>Prenez contact avec nous !</i></h3>
    </div>
    <button class="buttonGC blueButton" onclick="location.href='{{ path('gc_reservation_page') }}'">
        {{ 'Réservez votre place'|trans }}
    </button>
    {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
        <button class="buttonGC greenButton" onclick="location.href='{{ path('fos_user_registration_register') }}'">
            {{ 'Inscrivez-vous dès maintenant !'|trans }}</a>
        </button>
    {% endif %}
{% endblock %}


{% block firstBlock %}
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="centerText">Contactez-nous</h2>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.subject) }}
                        {{ form_errors(form.subject) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>
                    <div class="form-group" style="display: none;">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-xs-1"></div>
                <div class="col-md-6 col-xs-10 form-connexion">
                    <div class="clearThirty"></div>
                    <input class="buttonGC brownButton centerText midWidth" type="submit" value="Envoyer le message">
                </div>
                <div class="col-md-3 col-xs-1"></div>
            </div>

        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}


{% block secondBlock %}
    <div class="row addPadding">
        <div class="col-md-12">
            <h2 class="centerText">{{ "Téléphonez-nous"|trans }}</h2>
            <p class="sizeBigFont centerText"><b>01.15.54.15.18</b></p>
        </div>
    </div>
{% endblock %}
